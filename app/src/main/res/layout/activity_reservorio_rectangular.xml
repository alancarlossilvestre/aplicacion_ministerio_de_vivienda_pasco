<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calculosdesinfeccion.Captacion"

    >

    <include layout="@layout/actionbar_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ingrese Altura"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputAlturaReserRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese Altura"
            android:layout_margin="10dp"
            android:inputType="number"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ingrese Ancho"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputAnchoReserRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Ingrese Ancho"
            android:inputType="number"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="Ingrese Largo"
            android:textColor="#000000" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputLargoReserRect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Ingrese Largo"
            android:inputType="number"
            />

        <Button
        android:id="@+id/buttonCalcReserRectan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_margin="10dp"
        />

</LinearLayout>

    <LinearLayout
        android:id="@+id/linearResultado"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border"
        android:visibility="gone"
        >
    <TextView
        android:id="@+id/resultadoVoloumenReserRectan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/resultadoPesodeCloro_reserRectan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>