<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.cloracion"
    android:id="@+id/container_fragment_cloracion"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="15dp"
        >

    <Button
        android:id="@+id/btnautocompensant"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:drawableRight="@drawable/baseline_navigate_next_24"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:text="Autocompensante"
        android:textStyle="bold"
        app:cornerRadius="4dp" />

    <Button
        android:id="@+id/btnconvencional"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:drawableRight="@drawable/baseline_navigate_next_24"
        android:gravity="left|center_vertical"
        android:padding="10dp"
        android:text="Convencional"
        app:cornerRadius="4dp"
        android:textStyle="bold"
        />
    </LinearLayout>

</FrameLayout>