<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="15dp"
        >

        <Button
            android:id="@+id/btnllamarCaptacion"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/captacion"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="Captación"
            android:textStyle="bold"
            app:cornerRadius="4dp" />

        <Button
            android:id="@+id/btnllamarCamRomPre"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/camararompepresion"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="Camara Rompe Presión"
            app:cornerRadius="4dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnllamarReserCircu"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/tanquecircular"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="Reservorio Circular"
            app:cornerRadius="4dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnllamarReserRectan"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/tanquerectangular"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="Reservorio Rectángular"
            app:cornerRadius="4dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnllamarTuberias"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/pipe__1_"
            android:drawableRight="@drawable/baseline_navigate_next_24"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="Tuberías"
            app:cornerRadius="4dp"
            android:textStyle="bold"/>

        <!-- TODO: Update blank fragment layout -->
    </LinearLayout>
</FrameLayout>
